footer .copyright {
	padding:14px 0 0 0;
	color:#eee;
}
footer .copyright .logo {
	font-weight:bold;
}

.list-top-tool {
	height:30px;
	margin:14px 0 10px;
}
.left-side {
	float:left;
}
.right-side {
	float:right;
}

img.list-thumb {
	height:40px;
}
img.info-thumb {
	width:150px;
}
img.gallery-thumb {
	width:200px;
}

.tool-box {
	clear:both;
	padding:10px 0;
	text-align:center;
}

.view-box {
	border:3px solid #ddd;
	padding:20px;
}
.view-box h2 {
	font-size:14px;
	font-weight:bold;
	margin-bottom:20px;
}
.view-box .img-box {
	float:left;
}
.view-box .info-box {
	float:right;
	width:780px;
}